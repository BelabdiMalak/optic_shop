{
  "name": "optical-shop-electron",
  "private": true,
  "version": "1.0.0",
  "description": "Desktop app for optical shop management",
  "author": {
    "name": "BELABDI Malak",
    "email": "malakbelabdi@gmail.com"
  },
  "main": "electron.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"npm run electron:dev\"",
    "electron:dev": "electronmon .",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron": "electron electron.js",
    "package": "electron-builder",
    "start": "vite"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.1.1",
    "@chakra-ui/react": "^2.8.0",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@prisma/client": "^5.22.0",
    "electron-is-dev": "^3.0.1",
    "electron-log": "^5.2.0",
    "framer-motion": "^10.16.4",
    "joi": "^17.13.3",
    "path": "^0.12.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^2.0.5",
    "react-icons": "^4.11.0",
    "react-router-dom": "^6.15.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@types/node": "^20.17.10",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "concurrently": "^9.0.1",
    "electron": "^32.1.2",
    "electron-builder": "^25.1.7",
    "electronmon": "^2.0.3",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "prisma": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2",
    "vite": "^5.4.11"
  },
  "build": {
    "appId": "com.optical.shop",
    "productName": "optical_shop",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "electron.js",
      "src/**/*",
      "ipcHandlers/**/*",
      "backend/**/*",
      "config/**/*",
      "node_modules/.prisma/**/*",
      "node_modules/@prisma/client/**/*",
      "resources/**/*"
    ],
    "extraResources": [
      {
        "from": "dist/",
        "to": "app/dist/"
      },
      {
        "from": "resources/database.db",
        "to": "app/resources/database.db"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "tar.gz"
      ],
      "category": "Utility"
    }
  }
}
