{
  "name": "vite-project",
  "private": true,
  "version": "0.0.0",
  "description": "Desktop app for optical shop management",
  "author": {
    "name": "BELABDI Malak",
    "email": "malakbelabdi@gmail.com"
  },
  "electron": "electron .",
  "main": "electron.js",
  "scripts": {
    "start": "concurrently \"vite\" \"npm run electron:dev\"",
    "electron:dev": "electronmon .",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron": "electron electron.js",
    "package": "electron-builder",
    "prod": "npm run build && npm run package"
  },
  "devDependencies": {
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.2",
    "concurrently": "^9.0.1",
    "electron": "^32.1.2",
    "electron-builder": "^25.1.7",
    "electronmon": "^2.0.3",
    "prisma": "^5.20.0",
    "typescript": "^5.5.3",
    "vite": "^5.4.8"
  },
  "dependencies": {
    "@prisma/client": "^5.20.0",
    "electron-is-dev": "^3.0.1",
    "ipc": "^0.0.1",
    "joi": "^17.13.3",
    "path": "^0.12.7",
    "sqlite3": "^5.1.7"
  },
  "build": {
    "appId": "com.optical.shop",
    "productName": "optical_shop",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "electron.js"
    ],
    "extraResources": {
      "from": "dist/",
      "to": "app/dist/"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "tar.gz"
      ],
      "category": "Utility"
    }
  }
}
