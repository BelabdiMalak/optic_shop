{
  "name": "vite-project",
  "private": true,
  "version": "0.0.0",
  "description": "Desktop app for optical shop management",
  "author": {
    "name": "BELABDI Malak",
    "email": "malakbelabdi@gmail.com"
  },
  "electron": "electron .",
  "main": "electron.js",
  "scripts": {
    "start": "concurrently \"vite\" \"npm run electron:dev\"",
    "electron:dev": "electronmon .",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron": "electron electron.js",
    "package": "electron-builder",
    "prod": "npm run build && npm run package"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "electron": "^32.1.2",
    "electron-builder": "^25.1.7",
    "electronmon": "^2.0.3",
    "eslint": "^9.16.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.12.0",
    "postcss": "^8.4.49",
    "prisma": "^5.21.1",
    "tailwindcss": "^3.4.15",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.16.0",
    "vite": "^5.4.11"
  },
  "dependencies": {
    "@prisma/client": "^5.21.1",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@shadcn/ui": "^0.0.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-is-dev": "^3.0.1",
    "electron-log": "^5.2.0",
    "ipc": "^0.0.1",
    "joi": "^17.13.3",
    "lucide-react": "^0.460.0",
    "path": "^0.12.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.3.0",
    "sqlite3": "^5.1.7",
    "tailwind": "^4.0.0",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7"
  },
  "build": {
    "appId": "com.optical.shop",
    "productName": "optical_shop",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "electron.js"
    ],
    "extraResources": {
      "from": "dist/",
      "to": "app/dist/"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "tar.gz"
      ],
      "category": "Utility"
    }
  }
}
